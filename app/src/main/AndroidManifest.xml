<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abedkiloo.walletchango">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainDrawer"
            android:label="@string/dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.ProjectDetails"
            android:label="@string/title_activity_project_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.CreateFundRequest"
            android:label="@string/title_activity_create_fund" />
        <activity
            android:name=".Activities.Wallet"
            android:label="@string/title_activity_create_fund"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activities.Profile" />
        <activity android:name=".Activities.Login">

        </activity>
    </application>

</manifest>